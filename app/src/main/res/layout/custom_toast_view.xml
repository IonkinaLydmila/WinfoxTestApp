<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toastCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/standard_indent"
    android:layout_marginRight="@dimen/standard_indent"
    android:layout_marginBottom="60dp"
    android:minWidth="@dimen/custom_toast_min_width"
    android:minHeight="@dimen/custom_toast_min_height"
    app:cardBackgroundColor="@color/purple_700"
    app:cardCornerRadius="8dp"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/custom_toast_paddings"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/TextToastStyle"/>

</com.google.android.material.card.MaterialCardView>